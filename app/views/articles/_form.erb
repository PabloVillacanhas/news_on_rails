<%= render 'shared/errors', obj: @article %>

<div class="row">
  <%= form_for @article do |f| %>
    <div class="form-group">
      <%= f.label :title, for: 'title' %>
      <%= f.text_field :title, id: 'title', class: "form-control", placeholder: "Article title" %>
    </div>
    <div class="form-group">
      <%= f.label :description, for: 'description' %>
      <%= f.text_area :description, id: 'description', class: "form-control", placeholder: "Article description" %>
    </div>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</div>
<div class="row">
  <%= link_to "Cancel request and back to article listing", articles_path %>
</div>