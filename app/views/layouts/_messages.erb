<div class="row">
  <% flash.each do |type, msg| %>
    <div class="alert alert-<%= type %> alert-dismissible" role="alert">
      <div class="mb-0"><%= msg %></div>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>
</div>
